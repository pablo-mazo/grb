			/* Reset & Base Styles */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
				font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
			}

			body {
				color: #333;
				line-height: 1.6;
			}

			/* Color Variables */
			:root {
				--primary: #0c3b5f;
				--secondary: #fdb913;
				--light: #f5f5f5;
				--dark: #1a202c;
				--text: #333;
				--white: #fff;
			}

			/* Typography */
			h1,
			h2,
			h3,
			h4 {
